{
  "extends": ["github>unjs/renovate-config"],
  "packageRules": [
    {
      "depTypeList": ["peerDependencies"],
      "enabled": false
    },
    {
      "groupName": "farm",
      "matchPackagePrefixes": ["@farmfe"]
    },
    {
      "groupName": "rspack",
      "matchPackagePrefixes": ["@rspack"]
    },
    {
      "groupName": "webpack",
      "matchPackageNames": ["webpack", "webpack-cli"]
    }
  ],
  "ignoreDeps": ["webpack-cli", "node"]
}
